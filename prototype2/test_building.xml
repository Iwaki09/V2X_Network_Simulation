<scene version="3.0.0">
    <integrator type="direct"/>
    
    <!-- Simple materials -->
    <bsdf type="diffuse" id="building_material">
        <rgb name="reflectance" value="0.5, 0.5, 0.5"/>
    </bsdf>
    
    <bsdf type="diffuse" id="ground_material">
        <rgb name="reflectance" value="0.3, 0.8, 0.3"/>
    </bsdf>
    
    <!-- Test building: centered at x=50 to block vehicle1 when x=50 -->
    <shape type="cube" id="test_building">
        <transform name="to_world">
            <translate x="50.0" y="100.0" z="15.0"/>
            <scale x="5.0" y="50.0" z="15.0"/>
        </transform>
        <ref id="building_material"/>
    </shape>
    
    <!-- Ground plane -->
    <shape type="rectangle" id="ground">
        <transform name="to_world">
            <translate x="100.0" y="100.0" z="0"/>
            <scale x="100.0" y="100.0" z="1"/>
        </transform>
        <ref id="ground_material"/>
    </shape>
</scene>