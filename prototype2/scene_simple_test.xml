<scene version="3.0.0">
    <integrator type="direct"/>
    
    <!-- Simple diffuse materials for testing -->
    <bsdf type="diffuse" id="concrete">
        <rgb name="reflectance" value="0.5, 0.5, 0.5"/>
    </bsdf>
    
    <bsdf type="diffuse" id="ground_material">
        <rgb name="reflectance" value="0.3, 0.8, 0.3"/>
    </bsdf>
    
    <!-- Building 1: position [50, 50, 0], size [20, 80, 30] -->
    <shape type="cube" id="building1">
        <transform name="to_world">
            <translate x="60.0" y="90.0" z="15.0"/>
            <scale x="10.0" y="40.0" z="15.0"/>
        </transform>
        <ref id="concrete"/>
    </shape>

    <!-- Building 2: position [150, 100, 0], size [30, 20, 40] -->
    <shape type="cube" id="building2">
        <transform name="to_world">
            <translate x="165.0" y="110.0" z="20.0"/>
            <scale x="15.0" y="10.0" z="20.0"/>
        </transform>
        <ref id="concrete"/>
    </shape>

    <!-- Ground plane -->
    <shape type="rectangle" id="ground_plane">
        <transform name="to_world">
            <translate x="100.0" y="100.0" z="0"/>
            <scale x="100.0" y="100.0" z="1"/>
        </transform>
        <ref id="ground_material"/>
    </shape>
</scene>